{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node16"
    },
    "exclude": [
        "**/*.spec.ts"
    ],
    "include": [
        "**/*"
    ]
}